{% extends 'base.html.twig' %}

{% block title %}
    Registered new users
{% endblock %}

{% block body %}

    <h1>Registered new users</h1>

    <table>
        <tr>
            <th>#</th>
            <th>Username</th>
            <th>Email
            <th>Password</th>
            <th>Roles</th>
        </tr>
    {% for user in users %}
        <tr>
            <td>{{ user.id }}</td>
            <td>{{ user.username }}</td>
            <td>{{ user.email }}</td>
            <td>{{ user.password| slice(0, 15) ~ '...' }}</td>
            <td>
                {% for role in user.roles %}
                    {{ role }}{% if not loop.last %},{% endif %}
                {% endfor %}
            </td>
        </tr>
    {% endfor %}
    </table>

{% endblock %}